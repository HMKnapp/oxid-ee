{
    "name": "wirecard/paymentgateway",
    "description": "Wirecard paymentSDK module for the OXID eShop",
    "type": "oxideshop-module",
    "keywords": ["oxid", "modules", "eShop", "payment"],
    "repositories": {
        "oxid-esales/coding-standards": {
            "type": "vcs",
            "url": "https://github.com/OXID-eSales/coding_standards.git"
        },
        "phpmd/oxmd": {
            "type": "vcs",
            "url": "https://github.com/OXID-eSales/oxmd"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "oxid-esales/coding-standards": "^2.0.0",
        "phpmd/oxmd": "^1.0.0"
    },
    "extra": {
        "oxideshop": {
            "blacklist-filter": [
                "documentation/**/*.*",
                "CHANGELOG.md",
                "composer.json",
                "CONTRIBUTING.md",
                "README.md"
            ],
            "target-directory": "wirecard/paymentgateway"
        }
    },
    "scripts": {
        "ln-sniff-function-name": "ln -f Sniffs/FunctionNameUnderscore.php vendor/oxid-esales/coding-standards/Oxid/Sniffs/Functions/FunctionNameUnderscoreSniff.php",
        "cs-check": "phpcsoxid",
        "cs-fix": "phpcbf .",
        "post-install-cmd": "composer ln-sniff-function-name",
        "post-update-cmd": "composer ln-sniff-function-name"
    },
    "autoload": {
        "psr-4": {
            "Wirecard\\PaymentGateway\\": "../../../source/modules/wirecard/paymentgateway"
        }
    }
}