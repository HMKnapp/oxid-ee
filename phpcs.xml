<?xml version="1.0"?>
<ruleset name="Wirecard">
  <description>Wirecard OXID extension</description>

  <!-- Load standards -->
  <config name="installed_paths" value="CodeAnalysis/PHPCS/Standards,vendor/oxid-esales/coding-standards"/>

  <!-- Define standards -->
  <rule ref="WirecardOxid"/>

  <!-- Exclude patterns -->
  <exclude-pattern>.bin</exclude-pattern>
  <exclude-pattern>.bundle</exclude-pattern>
  <exclude-pattern>CodeAnalysis</exclude-pattern>
  <exclude-pattern>ops</exclude-pattern>
  <exclude-pattern>out</exclude-pattern>
  <exclude-pattern>Tests</exclude-pattern>
  <exclude-pattern>translations</exclude-pattern>
  <exclude-pattern>vendor</exclude-pattern>
  <exclude-pattern>views</exclude-pattern>
</ruleset>
